<Window x:Class="WpfAppTaskManeger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTaskManeger"
        mc:Ignorable="d"
        Title="Список дел" Height="450" Width="400" Icon="./icons/icon.png">
    <Grid Background="#FFFDFAF1">
        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <TextBlock Text="Список дел" FontSize="26" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>

                <Button Name="buttonAdd" Click="buttonAdd_Click" Content="Добавить дело" HorizontalAlignment="Right" VerticalAlignment="Center" 
                        ToolTip="При добавлении дело появиться с право и его придется выполнить" 
                        Height="30" Width="100" Margin="0,10,10,0" Background="#5EBEC4"
                />
            </Grid>

            <DataGrid Name="listToDo" Margin="10" AutoGenerateColumns="False" Background="#FDF5DF">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Width="0.5*"/>
                    <DataGridTextColumn Width="2*" Binding="{Binding Path=Title}"/>
                    <DataGridTextColumn Width="1*" Binding="{Binding Path=Date}"/>
                    <DataGridTemplateColumn Width="0.5*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Click="buttonDel_Click" Content="X" Background="#5EBEC4"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path=Description}"/>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>
            <!--
            <ListBox x:Name="listToDo" Grid.Row="1" Grid.Column="0" Margin="10"  Background="#FDF5DF">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Path=Title}"/>
                            <TextBlock Text="{Binding Path=Date, StringFormat=dd.MM.yyyy}"/>
                            <TextBlock Text="{Binding Path=Description}" Foreground="#000000" FontSize="10"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            -->
        </DockPanel>
    </Grid>
</Window>
