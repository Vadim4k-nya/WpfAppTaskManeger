<Window x:Class="WpfAppTaskManeger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTaskManeger"
        mc:Ignorable="d"
        Title="Список дел" Height="450" Width="400" Icon="/Image/icon.png">
    <Window.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="HeadersVisibility" Value="None"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FFFDFAF1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#5EBEC4"/>
        </Style>
    </Window.Resources>
    <Grid Background="#FFFDFAF1">
        <DockPanel x:Name="dockPanel">
            <Grid DockPanel.Dock="Top">
                <TextBlock Text="Список дел" Style="{StaticResource HeaderStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <Button Name="buttonAdd" Click="buttonAdd_Click" HorizontalAlignment="Right" VerticalAlignment="Center" 
                        ToolTip="При добавлении дело появиться внизу и его придется выполнить" 
                        MaxHeight="35" Margin="5" Padding="10,5,10,5">
                    <Image Source="/Image/add.png"/>
                </Button>
            </Grid>

            <Grid DockPanel.Dock="Bottom">
                <ProgressBar x:Name="progressToDo" MinHeight="25" Margin="5" Minimum="0"/>
                <TextBlock x:Name="progressTextToDo" HorizontalAlignment="Center" VerticalAlignment="Center" Text="0/0"/>
            </Grid>

            <DataGrid x:Name="listToDo" Margin="5" Background="#FDF5DF" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="0.2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Path=Doing}" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Width="2*" Binding="{Binding Path=Title}"/>
                    <DataGridTextColumn Width="1*" Binding="{Binding Path=Date, StringFormat=dd.MM.yyyy}"/>
                    <DataGridTemplateColumn Width="0.2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Click="buttonDel_Click" Background="#5EBEC4">
                                    <Image Source="/Image/delete.png" MaxHeight="10" MaxWidth="10" IsEnabled="False"/>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <TextBox Text="{Binding Path=Description}" TextWrapping="Wrap" AcceptsReturn="True" MaxLines="5" 
                                 VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch"/>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>
